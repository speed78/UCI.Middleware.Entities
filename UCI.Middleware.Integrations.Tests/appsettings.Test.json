// appsettings.Test.json
{
  "ConnectionStrings": {
    // ⚠️  NOTA: Queste NON sono usate da Testcontainers
    // Sono solo per riferimento o sviluppo locale
    "DefaultConnection": "Server=localhost;Database=UCITestDb;Trusted_Connection=true;",
    "AzureStorage": "UseDevelopmentStorage=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "Testcontainers": "Information"
    }
  },
  "TestSettings": {
    // ✅ QUESTI settings vengono usati
    "SqlServerTimeout": 120,
    "AzuriteTimeout": 60,
    "LargeFileTestSizeMB": 5,
    "TestDataPath": "./TestData",
    "MaxConcurrentTests": 5,
    "EnablePerformanceTests": true,
    "ContainerCleanupDelay": 5
  }
}